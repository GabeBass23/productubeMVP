{
    "manifest_version": 3,
    "name": "ProducTube",
    "description": "Limits distractions on YouTubeâ„¢",
    "version": "1.01",
    "background": {
      "service_worker": "serviceWorker.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
      ],
    "icons": {
      "16": "icons/jerry16.png",
      "32": "icons/jerry32.png",
      "48": "icons/jerry48.png",
      "128": "icons/jerry128.png"
    },
    "web_accessible_resources": [{
      "resources": ["html/homepageStruct.html"],
      "matches": ["*://*.youtube.com/*"]
    }],
    "host_permissions": [
        "*://*.youtube.com/*"
    ]
  }